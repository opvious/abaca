{
  "name": "abaca-example-simple",
  "private": true,
  "version": "0.0.0",
  "repository": "github:opvious/abaca",
  "description": "Simple example using Abaca",
  "author": "Opvious Engineering <oss@opvious.io>",
  "license": "Apache-2.0",
  "type": "module",
  "files": [
    "lib/",
    "resources/"
  ],
  "exports": {
    "./client": "./lib/client.js",
    "./server": "./lib/server.js"
  },
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "fix": "prettier --write",
    "gen": "abaca g resources/openapi.yaml -o src/sdk.gen.ts",
    "prepare": "pnpm run gen && pnpm run build",
    "test": "vitest",
    "watch": "tsc -b -w src"
  },
  "dependencies": {
    "abaca-koa": "workspace:*",
    "abaca-openapi": "workspace:*",
    "koa": "^2.13.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.1",
    "@types/koa__router": "^8.0.11",
    "abaca": "workspace:*"
  }
}
