{
  "name": "abaca-koa",
  "version": "0.7.1",
  "repository": "github:opvious/abaca",
  "description": "Abaca Koa integrations",
  "keywords": [
    "abaca",
    "koa",
    "openapi"
  ],
  "author": "Opvious Engineering <oss@opvious.io>",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib/"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./errors": "./lib/index.errors.js"
  },
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out $(find test -name '*.gen' -o -name '*.gen.*')",
    "fix": "prettier --write",
    "gen-test-pets": "abaca g test/resources/pets.openapi.yaml -o test/pets-sdk.gen.ts",
    "gen-test-tables": "abaca g test/resources/tables.openapi.yaml -o test/tables-sdk.gen.ts",
    "gen-test": "pnpm run gen-test-pets && pnpm run gen-test-tables",
    "prepare": "pnpm run build && inlinable e",
    "test": "pnpm run gen-test && vitest",
    "watch": "tsc -b -w src"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "@opentelemetry/api": "~1.4.1",
    "@opvious/stl-errors": "^0.21.39",
    "@opvious/stl-telemetry": "^0.21.39",
    "@opvious/stl-utils": "^0.21.39",
    "abaca-openapi": "workspace:*",
    "abaca-runtime": "workspace:*",
    "ajv": "^8.12.0",
    "busboy": "^1.6.0",
    "co-body": "^6.1.0",
    "http-proxy": "^1.18.1",
    "koa-compose": "^4.1.0",
    "openapi-types": "^12.1.0",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.0",
    "@types/co-body": "^6.1.0",
    "@types/http-proxy": "^1.17.10",
    "@types/koa": "^2.13.1",
    "@types/koa-compose": "^3.2.5",
    "@types/koa__router": "^8.0.11",
    "abaca": "workspace:*",
    "inlinable": "^0.2.6",
    "json-text-sequence": "^1.0.1",
    "koa": "^2.13.1",
    "koa-body": "^6.0.1",
    "node-fetch": "^3.3.1"
  }
}
