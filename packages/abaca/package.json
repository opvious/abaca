{
  "name": "abaca",
  "version": "0.8.0",
  "repository": "github:opvious/abaca",
  "description": "OpenAPI SDK generator with strong type guarantees and minimal boilerplate",
  "keywords": [
    "abaca",
    "cli",
    "fetch",
    "openapi",
    "sdk",
    "typescript"
  ],
  "author": "Opvious Engineering <oss@opvious.io>",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "bin/",
    "lib/",
    "resources/templates"
  ],
  "bin": "bin/abaca.js",
  "exports": {},
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out $(find . -name '*.gen' -o -name '*.gen.*')",
    "fix": "prettier --write",
    "gen-preamble": "./scripts/generate-preamble-template",
    "gen-test-pets": "./bin/abaca.js g test/resources/pets.openapi.yaml -o test/pets-sdk.gen.ts",
    "gen-test-snippets": "./bin/abaca.js g test/resources/snippets.openapi.yaml -o test/snippets-sdk.gen.ts --generate-ids",
    "gen-test-tables": "./bin/abaca.js g test/resources/tables.openapi.yaml -o test/tables-sdk.gen.ts --strict-additional-properties",
    "gen-test": "pnpm run gen-test-pets && pnpm run gen-test-snippets && pnpm run gen-test-tables",
    "prepare": "pnpm run gen-preamble && pnpm run build && inlinable e",
    "test": "pnpm run gen-test && vitest",
    "watch": "tsc -b -w src test"
  },
  "dependencies": {
    "@opvious/stl-bootstrap": "^0.21.39",
    "@opvious/stl-errors": "^0.21.39",
    "@opvious/stl-utils": "^0.21.39",
    "abaca-openapi": "workspace:*",
    "abaca-runtime": "workspace:*",
    "commander": "^10.0.0",
    "eta": "^3.1.0",
    "node-fetch": "^3.3.1",
    "openapi-typescript": "^6.2.0",
    "ora": "^7.0.1",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@koa/router": "^10.1.1",
    "@types/koa": "^2.13.1",
    "@types/koa__router": "^8.0.11",
    "inlinable": "^0.2.6",
    "koa": "^2.13.1",
    "koa-body": "^6.0.1",
    "ts-essentials": "^9.3.0"
  }
}
